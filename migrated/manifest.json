{
  "manifest_version": 2,
  "name": "Your webpack-based extension name",
  "description": "Your webpack-based extension description",
  "version": "1.0.0",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background": {
    "page": "index.html"
  },
  "permissions": [
    "https://*/*",
    "http://*/*"
  ]
}